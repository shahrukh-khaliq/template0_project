{
  "compilerOptions": {
    "target": "es5", // or es6/esnext depending on your needs
    "module": "esnext", // Use "esnext" or "module" for ES module support
    "moduleResolution": "node",
    "jsx": "react-jsx", // if you're using React 17+ JSX transform
    "esModuleInterop": true, // allows default import for commonJS modules
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"]
}


